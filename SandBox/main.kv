# File name: layouts.kv
#:kivy 1.8.0

<MyButton@ToggleButton>:
    color: .8,.9,0,1
    font_size: 32

<MyGridLayout>:
    message:message
    textbox:textbox
    title: title
    header:header
    rows: 3
    padding: root.width * 0.01, root.height *0.01
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.05
        valign: 'middle'
        halign: 'center'
        Label:
            id: title
            text: 'PiTouch1'
        Label:
            id:hostname
            text: ''
        Label:
            color: 0,1,0,1
            id: header
            text_size: self.size
            height: self.texture_size[1]
        Switch:
            id:switch
            on_active: root.connection_state()
            active: False

    GridLayout:
        rows:4
        cols:4
        MyButton:
            text: 'Bit1'
            on_press: root.cb_msg_bit1()
            group: 1
        MyButton:
            text: 'Bit2'
            on_press: root.cb_msg_bit2()
            group: 1
        MyButton:
            text: 'Bit3'
            on_press: root.cb_msg_bit3()
            group: 1
        MyButton:
            text: 'Bit4'
            on_press: root.cb_msg_bit4()
            group: 1
        MyButton:
            text: 'Bit5'
            on_press: root.cb_msg_bit5()
        MyButton:
            text: 'Bit6'
            on_press: root.cb_msg_bit6()
        MyButton:
            text: 'Bit7'
            on_press: root.cb_msg_bit7()
        MyButton:
            text: 'Bit8'
            on_press: root.cb_msg_bit8()
        MyButton:
            text: 'Bit9'
            on_press: root.cb_msg_bit9()
        MyButton:
            text: 'Bit10'
            on_press: root.cb_msg_bit10()
        MyButton:
            text: 'Bit11'
            on_press: root.cb_msg_bit11()
        MyButton:
            text: 'Bit12'
            on_press: root.cb_msg_bit12()
        MyButton:
            text: 'Bit13'
            on_press: root.cb_msg_bit13()
        MyButton:
            text: 'Bit14'
            on_press: root.cb_msg_bit14()
        MyButton:
            text: 'Bit15'
            on_press: root.cb_msg_bit15()
        MyButton:
            text: 'Bit16'
            on_press: root.cb_msg_bit16()

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.1
        canvas:
            Rectangle:
                pos: self.x,self.y
                size: self.width, self.height
        TextInput:
            id: textbox
            multiline: False
            focus: True
            text: ''
            on_text_validate: root.send_message()

        Label:
            valign: 'top'
            halign: 'justify'
            color: 0,0,0,1
            id: message
            text_size: self.size
            height: self.texture_size[1]
            text: 'status messages'


